{
  "name": "forescore",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:api": "tsx watch server/index.ts",
    "dev:web": "vite",
    "build:api": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outfile=dist/index.js",
    "build:web": "vite build",
    "build": "npm run build:api && npm run build:web",
    "start": "NODE_ENV=production node dist/index.js",
    "db:push": "drizzle-kit push",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "drizzle-orm": "^0.32.0",
    "pg": "^8.11.5",
    "@neondatabase/serverless": "^0.9.5",
    "ws": "^8.18.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.3.1",
    "drizzle-kit": "^0.24.0",
    "esbuild": "^0.21.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "vite": "^5.4.0"
  },
  "engines": {
    "node": ">=20"
  }
}